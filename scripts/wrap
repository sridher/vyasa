#!/bin/sh

set -e -u -o pipefail

#shift
echo "$@"

[ $(id -u) -ne 0 ] && echo -e "\e[1;31mRun this as root.....\e[0m" && exit 1

echo "WS: ${WS:?}"
echo "JAK: ${JAK:?}"
echo "TGT: ${TGT:?}"
echo "VYASA: ${VYASA:?}"
echo "VYASA_TGT: ${VYASA_TGT:?}"

# chroot
# schroot
# bubblewrap
# systemd-nspawn 

exec env -i HOME="$HOME" WS="/builds" JAK="$JAK" TGT="$TGT" VYASA="/" VYASA_TGT="$VYASA_TGT" \
	     HOME=/root                  \
	     TERM="$TERM"                \
	     PS1='\e[1;34m(vyasa chroot)\e[0m \u:\w\$ '\
	     PATH=/usr/bin:/usr/sbin   \
	     bwrap   \
	     --dev-bind "$VYASA" /   \
	     --dev /dev \
	     --bind /sys /sys    \
	     --bind /run /run    \
	     --proc /proc        \
	     --perms 1777 --tmpfs /dev/shm \
	     --hostname vyasa    \
	     --unshare-uts \
	     --bind "$WS"/pkgs /pkgs \
	     --bind "$WS"/scripts /vyasa \
	     --bind "$WS"/vbuilds /builds \
	     --bind "$WS"/sources /sources \
	     "$@"
#	     /bin/bash --login +h -c "$@" # returning shell will exit terminal
#‚ùØ WS="$(pwd)" VYASA="$(pwd)"/rootfs VYASA_TGT=$(uname -m)-vyasa-linux-gnu ./scripts/wrap bash
